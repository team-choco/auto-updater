{
  "name": "@team-choco/auto-updater",
  "version": "0.1.0",
  "description": "Keeping your services up to date till the Chocobos come home!",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-choco/auto-updater.git"
  },
  "contributors": [
    "Nick Woodward <nick@salte.io>"
  ],
  "bugs": {
    "url": "https://github.com/team-choco/auto-updater/issues"
  },
  "homepage": "https://github.com/team-choco/auto-updater",
  "bin": "bin/index.js",
  "dependencies": {
    "latest-version": "^5.1.0",
    "yargs": "^15.4.0"
  },
  "devDependencies": {
    "chance": "^1.1.6",
    "eslint": "^7.3.1",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lint-staged": "^10.2.11",
    "npm-run-all": "^4.1.5",
    "remove-lockfiles": "^2.1.3"
  },
  "scripts": {
    "validate": "run-p test:coverage test:integration lint",
    "test": "jest",
    "test:integration": "npm run test -- --config jest.integration.config.js",
    "test:coverage": "npm run test -- --coverage",
    "test:tdd": "npm run test -- --watch",
    "lint": "eslint --ignore-path .gitignore bot/**/*.ts",
    "lint:fix": "eslint --ignore-path .gitignore --fix"
  },
  "engines": {
    "node": ">=12 <=14"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && remove-lockfiles"
    }
  },
  "lint-staged": {
    "*.js": [
      "npm run lint:fix",
      "git add --force"
    ],
    "*.json": [
      "git add --force"
    ]
  },
  "publishConfig": {
    "access": "public"
  }
}
